# LG Remote API Configuration
# Copy this file to .env and update the values

# TV IP address or hostname (e.g. 192.168.1.100 or your-tv.local)
TV_IP=192.168.1.100

# TV MAC address (for Wake-on-LAN, format xx-xx-xx-xx-xx-xx)
TV_MAC=xx-xx-xx-xx-xx-xx

# Store path (for WebOS authentication)
STORE_PATH=store.json

# Default wait time in seconds
DEFAULT_WAIT=0

# Wait time for power operations in seconds
DEFAULT_WAIT_POWER=5

# Verify TV connection after power command (true/false)
DEFAULT_VERIFY=false

# Default app to launch
DEFAULT_APP=netflix
